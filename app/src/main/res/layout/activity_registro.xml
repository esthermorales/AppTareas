<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_height="99dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/idTvRegistrate"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_apptareas" />

    <TextView
        android:id="@+id/idBienvenid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/Bienvenid"
        android:textColor="@color/naranjaApp"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/idTvRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/idStringRegistrate"
        android:textColor="@color/azulApp"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/idEtEmail"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/idEtEmail"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/IdpTEmail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTvRegistrate" />

    <EditText
        android:id="@+id/idEtPassword"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/idEtPass"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEtEmail" />

    <EditText
        android:id="@+id/idEtConfPass"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/idEtConfCont"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEtPassword" />

    <CheckBox
        android:id="@+id/idCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/asap_medium"
        android:text="@string/idCheck"
        android:textColor="@color/grisApp"
        app:buttonTint="@color/naranjaApp"
        app:layout_constraintStart_toStartOf="@+id/idEtConfPass"
        app:layout_constraintTop_toBottomOf="@+id/idEtConfPass" />

    <Button
        android:id="@+id/idBtnRegistro"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/idBtnRegistrate"
        android:textColor="#EDE9E9"
        app:backgroundTint="@color/azulApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/asap_medium"
        android:textColor="@color/azulApp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/idEtEmail"
        app:layout_constraintStart_toStartOf="@+id/idEtEmail"
        tools:text="@string/et_mail" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/asap_medium"
        android:text="@string/lvContraseÃ±a"
        android:textColor="@color/azulApp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/idEtPassword"
        app:layout_constraintStart_toStartOf="@+id/idEtPassword" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap_medium"
        android:text="@string/txtLOPD"
        android:textColor="@color/naranjaApp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/idCheck"
        app:layout_constraintStart_toEndOf="@+id/idCheck"
        app:layout_constraintTop_toTopOf="@+id/idCheck" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap_medium"
        android:text="@string/txtInfo"
        android:textColor="@color/grisApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="680dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="@font/asap_medium"
        android:text="@string/txtEntrar"
        android:textColor="@color/naranjaApp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />


</androidx.constraintlayout.widget.ConstraintLayout>